<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ToDoApplication" parent="Base.Theme.ToDoApplication" />

    <style name="Body">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="LargeTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">38sp</item>
    </style>

    <style name="Button">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/color_light_green</item>
    </style>

    <style name="Theme.date" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_light_blue</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/color_light_blue</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>
</resources>